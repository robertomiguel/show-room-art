rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /setting/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /personal/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /gallery/{document} {
      allow read: if true;
      allow write: if request.auth != null;

      match /photos/{photoId} {
        // Permitir lectura siempre
        allow read: if true;
        // Permitir escritura solo si el usuario est√° autenticado
        allow write: if request.auth != null;
        
        // Eliminar el campo "password" en los retornos
        match /{document=**} {
          allow read, write: if request.auth != null;
          // Eliminar el campo "password" en los retornos
          match /password {
            allow read, write: if false;
          }
        }
      }

      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}